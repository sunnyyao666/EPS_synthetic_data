{
	"include": ["./src/**/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist/types",
		"target": "ES2020",
		"lib": ["ES2020"],
		"jsx": "react",
		"module": "ES2020",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	}
}
